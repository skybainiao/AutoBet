<Window x:Class="AutoBet.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid Background="#AAFFFFFF" Width="200" Height="100">
        <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="20" />
                <TextBlock Text="正在加载..." Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="14" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
