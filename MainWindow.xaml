<Window x:Class="SportsBettingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoBet" Height="800" Width="1400" MinHeight="600" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 顶部按钮区域 -->
            <RowDefinition Height="*"/>
            <!-- 主内容区域 -->
        </Grid.RowDefinitions>

        <!-- 按钮区域 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="加载 Match1 数据" Click="LoadServer1Data" Width="150" Height="30" Margin="5"/>
            <Button Content="加载 Match2 数据" Click="LoadServer3Data" Width="150" Height="30" Margin="5"/>
            <Button Content="配对" Click="PairMatches" Width="100" Height="30" Margin="5"/>
            <Button Content="投注" Click="BetOnMatch" Width="100" Height="30" Margin="5"/>
        </StackPanel>

        <!-- 主内容区域 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 服务器1 标签页 -->
            <TabItem Header="服务器1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 服务器1的Match1列表 -->
                    <GroupBox Header="服务器1 - Match1 基础信息" Grid.Column="0" Margin="5">
                        <ListView Name="Server1ListView" SelectionMode="Single">
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding League}" />
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayInfo}" Foreground="Black"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- 服务器3 标签页 -->
            <TabItem Header="服务器3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 服务器3的Match2列表 -->
                    <GroupBox Header="服务器3 - Match2 基础信息" Grid.Column="0" Margin="5">
                        <ListView Name="Server3ListView" SelectionMode="Single">
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding League}" />
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayInfo}" Foreground="Black"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- 配对与投注功能标签页 -->
            <TabItem Header="配对与投注">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <!-- 已配对比赛列表 -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="已配对比赛：" FontWeight="Bold" FontSize="14" />
                        <ListView Name="PairedMatchesListView" Margin="0,5,0,10" SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayPairInfo}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- 按钮区域 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="配对" Click="PairMatches" Width="100" Height="30" Margin="5" />
                        <Button Content="投注" Click="BetOnMatch" Width="100" Height="30" Margin="5" />
                    </StackPanel>

                    <!-- 已投注比赛列表 -->
                    <StackPanel Grid.Row="2" Margin="10">
                        <TextBlock Text="已投注比赛：" FontWeight="Bold" FontSize="14" />
                        <ListView Name="BetMatchesListView" Margin="0,5,0,0" SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayBetInfo}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
